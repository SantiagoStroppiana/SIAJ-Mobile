<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView android:id="@+id/tvUsuarioVenta"
        android:text="Usuario"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvTotalVenta"
        android:text="$0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvEstadoVenta"
        android:text="Estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvFechaVenta"
        android:text="2025-01-01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvMedioPagoVenta"
        android:text="Efectivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnVerDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver detalles"
        android:layout_marginTop="8dp"/>

</LinearLayout>
