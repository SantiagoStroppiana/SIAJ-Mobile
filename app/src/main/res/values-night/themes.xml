<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SIAJMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Igual al modo claro, pero usás los mismos colores (oscuro por defecto) -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_secondary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
<!--        <item name="colorBackground">@color/inventory_background</item>-->
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Color del diálogo -->
        <item name="dialogTheme">@style/CustomAlertDialog</item>
    </style>

    <style name="Theme.SIAJMobile" parent="Base.Theme.SIAJMobile" />

    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="backgroundTint">@color/card_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_primary</item>
    </style>

</resources>
