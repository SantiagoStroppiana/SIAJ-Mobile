<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Add Button Style -->
    <style name="AddButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/add_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/secondary_button_background</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/button_secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Search Input Style -->
    <style name="SearchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxStrokeColor">@color/search_border_focused</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxBackgroundColor">@color/search_background</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <style name="SupplierActionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/supplier_action_button_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="strokeColor">@color/action_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>